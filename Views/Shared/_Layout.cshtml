<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="topnav" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WoW Arena Builder", "Index", "Home", new { area = "" }, new { @class = "linkClass" })
            </div>
            <div class="">
                <ul class="nav navbar-nav">
                    <li class="">@Html.ActionLink("Classes", "List", "WoWClass", new { area = "" }, new { @class = "linkClass" })</li>
                    <li class="">@Html.ActionLink("Comps", "List", "Comp", new { area = "" }, new { @class = "linkClass" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>WoW Arena Builder is a Passion Project for HTTP5204.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
